<h1>Edit Hidden Gem</h1>

<% if flash.now[:error] %>
    <h3> Errors: </h3>
    <ul>
    <% flash.now[:error].each do |err| %>
        <%= err %><br>
    <% end %>
    </ul>
<% end %>

<% if session[:user_id] %>
    <%= form_for @location do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :description %> (Max. 50 words) <br>
        <%= f.text_area :description %>
        <br><br>
        <%= f.label :country %>
        <%= f.collection_select :country_id, Country.all, :id, :name %>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
        <br><br>
        <%= f.submit %>
    <% end %>
<% end %>