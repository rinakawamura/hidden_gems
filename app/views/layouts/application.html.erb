<!DOCTYPE html>
<html>
  <head>
    <title>HiddenGems</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application.css" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="nav-bar">
      <ul>

        <li><%= link_to "Home", '/' %></li>
        <li><%= link_to "About", '/about' %></li>
        <li><%= link_to "Hidden Gem List", locations_path %></li>

        <% if session[:user_id] %>
          <li class="right"><a href="#">Hi <%= User.find(session[:user_id]).full_name %></a>
            <ul class="dropdown">
              <li><%= link_to "My Page", "/users/#{session[:user_id]}" %></li>
              <li><%= link_to "Log Out", "/logout", method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li class="right"><a href="#"> Log In / Register </a>
            <ul class="dropdown">
              <li><%= link_to "Log In", "/login", method: :get %></li>
              <li><%= link_to "Register", "/signup", method: :get %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
