<h1>Edit Your Profile</h1>
<% if flash.now[:error] %>
  <% flash.now[:error].each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %><br>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br><br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br><br>
  <%= f.label :country_id %>
  <%= f.collection_select :country_id, Country.all, :id, :name %>
  <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
