<h1>Signup for Hidden Gems</h1>
<%= form_for @user do |f| %>
<%= f.text_field :first_name %>
<%= f.text_field :last_name %>
<%= f.email_field :email %>
<%= f.collection_select :country_id, Country.all, :id, :name %>
<%= f.password_field :password %>
<%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>
